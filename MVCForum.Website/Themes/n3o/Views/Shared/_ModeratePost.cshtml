@model MVCForum.Domain.DomainModel.Post
           
<div class="postsnippet" id="post-@Model.Id">
    <div class="row-fluid">
        <div class="span9">
            <h2>Replying in: @Model.Topic.Name</h2>
            <p>@Html.Raw(AppHelpers.ConvertPostContent(Model.PostContent))</p>
            <p class="postuser">@Model.User.UserName</p>
        </div>
        <div class="span3">
            <a href="#" data-postid="@Model.Id" data-postaction="approve" class="btn btn-info postaction">Approve</a>
            <a href="#" data-postid="@Model.Id" data-postaction="delete" class="btn btn-danger postaction">Delete</a>
        </div>
    </div>
</div>